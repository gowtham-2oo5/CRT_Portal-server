spring:
  application:
    name: Core-Server
  datasource:
    username: ${DB_USERNAME:crt_user}
    password: ${DB_PASSWORD:your_secure_password}
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:crt_portal}
  jpa:
    hibernate:
      ddl-auto: update
  data:
    jdbc:
      dialect: mysql
  mail:
    host: ${SMTP_HOST:smtp.gmail.com}
    port: ${SMTP_PORT:587}
    username: ${SMTP_USERNAME:your_email@gmail.com}
    password: ${SMTP_PASSWORD:your_app_specific_password}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true

  servlet:
    multipart:
      enabled: true
      max-file-size: 10MB
      max-request-size: 10MB
      file-size-threshold: 2KB

springdoc:
  swagger-ui:
    enabled: true
    path: /
  api-docs:
    enabled: true
    path: /api-docs

jwt:
  secret: ${JWT_SECRET:your_very_long_and_secure_jwt_secret_key_at_least_256_bits}
  expiration: ${JWT_EXPIRATION:86400000}
  refresh-token:
    expiration: ${JWT_REFRESH_EXPIRATION:604800000}

client:
  url: ${CLIENT_URL:http://localhost:3000}

server:
  port: 8080
  address: 0.0.0.0
  tomcat:
    max-http-form-post-size: 10MB
    max-swallow-size: 10MB
    connection-timeout: 20000
    max-keep-alive-requests: 100
    max-connections: 10000
    accept-count: 100
    threads:
      max: 200
      min-spare: 10
  error:
    include-message: always
    include-binding-errors: always
    include-stacktrace: never
    include-exception: false

# Monitoring and Metrics Configuration
management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics,prometheus,env,beans,configprops,httptrace,loggers
      base-path: /actuator
  endpoint:
    health:
      show-details: always
      show-components: always
    prometheus:
      enabled: true
    metrics:
      enabled: true
  metrics:
    export:
      prometheus:
        enabled: true
    distribution:
      percentiles-histogram:
        http.server.requests: true
      percentiles:
        http.server.requests: 0.5,0.95,0.99
      slo:
        http.server.requests: 50ms,100ms,200ms,500ms,1s,2s
    enable:
      jvm: true
      system: true
      process: true
      hikaricp: true
      jdbc: true
    tags:
      application: crt-portal

# WebSocket Configuration
websocket:
  allowed-origins: 
    - "http://localhost:3000"
    - "http://localhost:3001" 
    - "http://127.0.0.1:3000"
  heartbeat:
    interval: 25000  # 25 seconds
    timeout: 60000   # 60 seconds
